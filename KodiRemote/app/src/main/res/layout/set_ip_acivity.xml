<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kodi"
    android:theme="@style/AppTheme"
    tools:context="com.example.micha.kodiremote.AppToControlActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="255dp"
        android:layout_height="wrap_content"
        android:layout_x="106dp"
        android:layout_y="93dp"
        android:text="Set your Kodi App host IP"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="355dp"
        android:layout_height="156dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.309">

        <EditText
            android:id="@+id/editIP1"
            android:layout_width="56dp"
            android:maxLength="3"
            android:layout_height="39dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textColor="@android:color/background_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.509" />

        <EditText
            android:id="@+id/editIP2"
            android:layout_width="54dp"
            android:maxLength="3"
            android:layout_height="39dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textColor="@android:color/background_light"
            app:layout_constraintBottom_toBottomOf="@+id/editIP1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.355"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editIP3"
            android:maxLength="3"
            android:layout_width="52dp"
            android:layout_height="42dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textColor="@android:color/background_light"
            app:layout_constraintBottom_toBottomOf="@+id/editIP2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.66"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editIP4"
            android:maxLength="3"
            android:layout_width="56dp"
            android:layout_height="42dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textColor="@android:color/background_light"
            app:layout_constraintBottom_toBottomOf="@+id/editIP3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="31dp"
            android:layout_height="58dp"
            android:text="."
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="@+id/editIP1"
            app:layout_constraintLeft_toRightOf="@+id/editIP1"
            app:layout_constraintRight_toLeftOf="@+id/editIP2"
            tools:text="." />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="29dp"
            android:layout_height="58dp"
            android:text="."
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="@+id/editIP2"
            app:layout_constraintEnd_toStartOf="@+id/editIP3"
            app:layout_constraintHorizontal_bias="0.44"
            app:layout_constraintLeft_toRightOf="@+id/editIP2"
            app:layout_constraintRight_toRightOf="@+id/editIP3"
            tools:text="." />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="25dp"
            android:layout_height="58dp"
            android:text="."
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="50sp"
            app:layout_constraintBottom_toBottomOf="@+id/editIP3"
            app:layout_constraintEnd_toStartOf="@+id/editIP4"
            app:layout_constraintLeft_toRightOf="@+id/editIP3"
            app:layout_constraintRight_toLeftOf="@+id/editIP4"
            tools:text="." />

        <android.support.constraint.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="-64dp" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="-1dp" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp" />
    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="312dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_x="0dp"
        android:layout_y="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="161dp"
            android:layout_height="190dp"
            android:layout_alignParentEnd="true"
            android:layout_x="91dp"
            android:layout_y="57dp"
            android:src="@drawable/kodi_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.108" />

        <Button
            android:id="@+id/x"
            style="@android:style/Widget.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="212dp"
            android:layout_x="149dp"
            android:layout_y="243dp"
            android:background="@android:color/holo_blue_light"
            android:onClick="onClickAction"
            android:text="Enter"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="@android:color/background_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="20dp" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
